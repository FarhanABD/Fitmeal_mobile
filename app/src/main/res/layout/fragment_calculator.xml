<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calculator.CalculatorActivity"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Berat Badan Dalam KG"
        android:id="@+id/bb_textfield"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Tinggi Badan Dalam CM"
        android:id="@+id/tb_textfield"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:paddingTop="50dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Usia Anda"
        android:id="@+id/usia_textfield"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:paddingTop="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_laki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Laki Laki"
            android:onClick="cowo"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/btn_perempuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:onClick="cewe"
            android:text="Perempuan"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil / KKAL"
        android:gravity="center"
        android:paddingTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txt_hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center"
        android:paddingTop="50dp"
        android:textSize="50sp"
        android:textColor="@color/black"
        />

</LinearLayout>

