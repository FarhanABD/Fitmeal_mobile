<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lazday.kelasonline">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KelasOnline"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".CalculatorActivity"
            android:exported="false" />
        <activity
            android:name=".ui.module.DetailActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout" />
        <activity android:name=".ui.course.CourseActivity" />
        <activity android:name=".ui.BaseActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.module.ModuleActivity" />
        <activity
            android:name=".ui.splashscreen.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>